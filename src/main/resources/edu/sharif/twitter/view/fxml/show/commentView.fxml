<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="anchorPane" prefHeight="200.0" prefWidth="350.0" style="-fx-background-color: #15223b;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.sharif.twitter.view.show.CommentView">
   <children>
      <Label fx:id="usernameLabel" layoutX="14.0" layoutY="14.0" text="Username">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="commentLabel" alignment="CENTER" layoutX="15.0" layoutY="39.0" prefHeight="70.0" prefWidth="318.0" style="-fx-border-color: #1e90ff; -fx-border-radius: 5;" text="Label" />
      <Label fx:id="replyLabel" alignment="CENTER" layoutX="15.0" layoutY="118.0" prefHeight="35.0" prefWidth="318.0" style="-fx-border-color: #1e90ff; -fx-border-radius: 5;" text="Reply to: " />
      <Button fx:id="likeButton" layoutX="15.0" layoutY="154.0" mnemonicParsing="false" style="-fx-background-color: #00000000;">
         <graphic>
            <ImageView fitHeight="28.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/like-logo.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="replyButton" layoutX="290.0" layoutY="157.0" mnemonicParsing="false" onAction="#reply" style="-fx-background-color: #00000000;" text="Reply">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
