<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="messagePane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.sharif.twitter.view.show.MessageView">
   <children>
      <Label fx:id="usernameLabel" layoutX="14.0" layoutY="14.0" text="Username">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="messageLabel" layoutX="12.0" layoutY="50.0" text="Message">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <MenuBar fx:id="optionBar" layoutX="98.0" layoutY="11.0">
        <menus>
          <Menu mnemonicParsing="false" text="!">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#reply" text="reply" />
                  <MenuItem mnemonicParsing="false" onAction="#forward" text="forward" />
                  <MenuItem mnemonicParsing="false" onAction="#edit" text="edit" />
                  <MenuItem mnemonicParsing="false" onAction="#delete" text="delete" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
